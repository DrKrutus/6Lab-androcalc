<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maxim.lab6_calculator.MainActivity">

    <Button
        android:text="X-Y"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button18"
        android:layout_width="280dp"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:text="X/Y"
        android:layout_height="150dp"
        android:id="@+id/button16"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button15"
        android:layout_width="280dp"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:text="X+Y"
        android:layout_height="150dp"
        android:id="@+id/button15"
        android:layout_width="280dp"
        android:layout_above="@+id/button18"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:text="X*Y"
        android:layout_height="150dp"
        android:id="@+id/button20"
        android:layout_width="280dp"
        android:layout_above="@+id/button16"
        android:layout_toEndOf="@+id/button15"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:text="X to bin"
        android:layout_height="150dp"
        android:id="@+id/button22"
        android:layout_width="280dp"
        android:layout_above="@+id/button14"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:text="Button"
        android:layout_height="150dp"
        android:id="@+id/button14"
        android:layout_width="280dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:text="X xor Y"
        android:layout_height="150dp"
        android:id="@+id/button23"
        android:layout_width="280dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button22"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:text="X mod Y"
        android:layout_height="150dp"
        android:id="@+id/button19"
        android:layout_width="280dp"
        android:layout_alignBottom="@+id/button22"
        android:layout_toStartOf="@+id/button22"
        android:layout_alignTop="@+id/button22"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:text="Y"
        android:id="@+id/textView4"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/button19"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:text="X"
        android:layout_marginTop="37dp"
        android:id="@+id/textView3"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button20"
        android:textSize="30sp"
        android:textAlignment="center" />

    <TextView
        android:text="Results"
        android:id="@+id/textView"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="30sp" />

    <EditText
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="51dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="30sp" />

    <EditText
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp"
        android:textAlignment="center"
        android:textSize="30sp" />

    <EditText
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:textSize="30sp" />

</RelativeLayout>
